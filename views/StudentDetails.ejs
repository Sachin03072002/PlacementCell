<link rel="stylesheet" type="text/css" href="/static/css/studentDetails.css">
<div class="studentDetails">
    <div class="student_title">
        <h2>Student Details</h2>
    </div>
    <div class="d-flex justify-content-around flex-wrap p-4">

        <% for(student of students){ %>

            <div class="card mb-3" style="max-width: 640px;">
                <div class="row g-0">
                    <div class="col-md-2">
                        <img src="https://th.bing.com/th/id/OIP.Zu6JpD4EQWssu9_9t5Y7AwHaHa?pid=ImgDet&rs=1"
                            class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= student.name %>
                            </h5>
                            <p class="card-text">
                                <%= student.email %>
                            </p>
                            <p class="card-text"><small class="text-body-secondary">
                                    <%= student.status %>
                                </small></p>
                        </div>

                    </div>
                    <a class="btn btn-primary" href="/student/edit-student/<%= student.id %>">EDIT</a>
                    <a class="btn btn-primary" href="/student/destroy/<%= student.id %>">DELETE</a>
                </div>
            </div>


            <% } %>

    </div>
    <div id="hamburger" class="hamburger"><i class="fa-solid fa-bars"></i></div>
    <aside>
        <div class="conference_title">
            <h2>Conference</h2>
        </div>

        <div class="accordion accordion-flush" id="show-accordian">
            <% for(interview of all_interviews){ %>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            <%= interview.company %>
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse"
                        data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <%= interview.company %>
                                <%= interview.date %>
                        </div>
                    </div>
                    <h5>Enrolled studetns</h5>
                    <% for(i of interview.students){ %>
                        <div class="border border-secondary rounded mb-2">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>
                                            Name
                                        </td>
                                        <td>
                                            <%= i.student.name %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Email
                                        </td>
                                        <td>
                                            <%= i.student.email %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Result
                                        </td>
                                        <td>
                                            <%= i.result %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <a href="/interview/deallocate/<%= i.student.id %>/<%= interview.id %>"
                                class="btn btn-danger ms-2 mb-2">Delete</a>
                        </div>
                        <% } %>
                </div>
                <div class="d-flex flex-column align-items-center border rounded p-2 m-2 shadow-sm">
                    <h5>Add student</h5>
                    <form action="/interview/enroll-in-interview/<%= interview.id %>" method="post">
                        <div class="mb-3">
                            <label for="student_email" class="form-label">Student email</label>
                            <input type="email" class="form-control" id="student_email" aria-describedby="emailHelp"
                                name="email" required />

                        </div>
                        <div class="mb-3">
                            <label for="result" class="form-label">Result</label>
                            <select name="result" id="result" class="form-select" requires>
                                <option selected>PASS</option>
                                <option>FAIL</option>
                                <option>On Hold</option>
                                <option>didnt attempt</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            &nbsp; ADD &nbsp;
                        </button>
                    </form>
                </div>
                <% } %>
        </div>
</div>

</aside>
<script src="/static/js/studentDetails.js"></script>