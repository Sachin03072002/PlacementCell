<!-- <h2>New Student Form</h2> -->
<form action="/student/addNewStudentForm" method="POST">

    <div class="form-container">
        <h2>Student Information</h2>
        <form>
            <div class="form-group">
                <input type="text" id="name" name="name" required>
                <label for="name">Name:</label>
            </div>
            <div class="form-group">
                <input type="text" id="class" name="email" required>
                <label for="class">Email:</label>
            </div>
            <div class="form-group">
                <input type="text" id="marks" name="college" required>
                <label for="marks">College:</label>
            </div>
            <div class="form-group">
                <input type="text" id="marks" name="batch" required>
                <label for="marks">Batch:</label>
            </div>
            <div class="form-group">

                <label for="marks">Status:</label>
                <select id="status" name="status" required onchange="updateStatus(this)">
                    <option value="">Select status...</option>
                    <option value="Placed">Placed</option>
                    <option value="Not-Placed">Not-Placed</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" id="marks" name="dsaScore" required>
                <label for="marks">DSA Score:</label>
            </div>
            <div class="form-group">
                <input type="text" id="marks" name="webdevScore" required>
                <label for="marks">Web Dev Score:</label>
            </div>
            <div class="form-group">
                <input type="text" id="marks" name="reactScore" required>
                <label for="marks">React Score:</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>


</form>
<script src="/static/js/studentForm.js"></script>